extends layout

block content

  main
    div.img-hold
    div.content-hold
      form(name="myform" action="" method="POST")
        img(src="/images/7552570584197185327tractionlogo.jpeg" alt="Logo" width="80px")
        label(for="email") email 
        input#oldPassword(type="text" name="email" required='true' placeholder="Your Email" value=(undefined===password ? '' : password.email))
        label(for="password") PASSWORD
        input#password(type="password" name="password" placeholder="8+ characters" required='true' value=(undefined===password ? '' : password.password))

        button#mybtn(type="submit") LogIn
        script(src='/javascripts/main.js')

      if errors
        ul
          for error in errors
            li!= error.msg